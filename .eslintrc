{
  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": 2017
  },

  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },

  "rules": {
    "no-undef": "error",
    "prefer-const": "error",
    "camelcase": ["error", {
      "properties": "never"
    }],
    "max-len": [1, 100, 2],
    "quotes": ["error", "single"],
    "sort-imports": ["warn", {
      "ignoreMemberSort": true
    }],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "always-multiline"
    }]
  }
}