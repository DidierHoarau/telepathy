{
  "name": "seed-nodejs-typescript",
  "version": "0.1.0",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "packaging:init": "chmod +x docker-packaging-config/*.sh && docker-packaging-config/init.sh",
    "//": "-------------------------------------------------------------------",
    "packaging:prepare": "docker-packaging/prepare.sh",
    "packaging:image-build": "docker-packaging/image-build.sh",
    "packaging:image-push": "docker-packaging/image-push.sh",
    "packaging:service-deploy": "docker-packaging/service-deploy.sh",
    "packaging:service-run": "docker-packaging/service-run.sh",
    "///": "------------------------------------------------------------------",
    "build:init": "rm -fr dist && mkdir -p dist/config && cp src/config/*.json dist/config/",
    "build": "npm run build:init && tsc",
    "lint": "tslint --project tsconfig.json ./src/**/*.ts || exit 1",
    "test:unit": "npm run lint && NODE_ENV=dev jest --watch --coverage",
    "////": "-----------------------------------------------------------------",
    "dev":
      "npm run build && NODE_ENV=dev concurrently --kill-others \"tsc -w\" \"nodemon dist/app.js\"",
    "dev:docker": "docker-packaging-config/start-dev-docker.sh || true",
    "dev:test": "NODE_ENV=dev jest --watch --coverage"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "fs-extra": "^6.0.0",
    "lodash": "^4.17.10",
    "request": "^2.83.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/node": "^10.0.4",
    "@types/request": "^2.47.0",
    "@types/sinon": "^4.1.3",
    "chai": "^4.0.2",
    "concurrently": "^3.5.1",
    "eslint": "^4.18.2",
    "jest": "^22.4.2",
    "nodemon": "^1.17.4",
    "npm-watch": "^0.3.0",
    "sinon": "^5.0.7",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*.spec.ts",
    "collectCoverageFrom": ["src/**/*.{ts}"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
