{
  "name": "telepathy-server",
  "version": "2018.10.0",
  "author": "",
  "license": "MIT",
  "scripts": {
    "packaging:init": "rm -fr docker-packaging && cp -R ../_shared/docker-packaging . && chmod +x docker-packaging-config/*.sh && docker-packaging-config/init.sh",
    "//": "-------------------------------------------------------------------",
    "packaging:prepare": "docker-packaging/prepare.sh",
    "packaging:image-build": "docker-packaging/image-build.sh",
    "packaging:image-push": "docker-packaging/image-push.sh",
    "packaging:service-deploy": "docker-packaging/service-deploy.sh",
    "packaging:service-run": "docker-packaging/service-run.sh",
    "///": "------------------------------------------------------------------",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json ./src/**/*.ts || exit 1",
    "test:unit": "npm run lint && NODE_ENV=dev jest --watch --coverage",
    "////": "-----------------------------------------------------------------",
    "dev": "npm run build && NODE_ENV=dev concurrently --kill-others \"tsc -w\" \"nodemon dist/app.js\"",
    "dev:docker": "docker-packaging-config/start-dev-docker.sh || true",
    "dev:test": "NODE_ENV=dev jest --watch --coverage",
    "binary:linux:x64": "npm run build && pkg dist/app.js --target node10-linux-x64 --output ../builds/telepathy-server-linux-x64",
    "binary:linux:armv6": "npm run build && pkg dist/app.js --target node10-linux-armv7 --output ../builds/telepathy-server-linux-armv6",
    "binary:linux:armv7": "npm run build && pkg dist/app.js --target node10-linux-armv7 --output ../builds/telepathy-server-linux-armv7"
  },
  "dependencies": {
    "express": "^4.16.4",
    "fs-extra": "^7.0.0",
    "lodash": "^4.17.11",
    "md5-file": "^4.0.0",
    "pkg": "^4.3.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.5",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.12.0",
    "@types/request": "^2.47.1",
    "@types/sinon": "^5.0.5",
    "concurrently": "^4.0.1",
    "eslint": "^5.7.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "npm-watch": "^0.4.0",
    "sinon": "^7.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*.spec.ts",
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
