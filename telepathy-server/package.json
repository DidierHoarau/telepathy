{
  "name": "telepathy-server",
  "version": "1.3.0",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dependencies": "rm -fr src/common-model && cp -R ../_shared/common-model src/common-model && rm -fr src/utils-std-ts && cp -R ../_shared/utils-std-ts src/utils-std-ts",
    "//": "-------------------------------------------------------------------",
    "build": "npm run dependencies && tsc",
    "lint": "eslint src",
    "test": "jest --coverage || true",
    "test:dev": "jest --watch --coverage",
    "////": "-----------------------------------------------------------------",
    "dev": "ts-node --require './src/utils-std-ts/tracing.ts' ./src/app.ts",
    "dev:docker": "docker-packaging-config/start-dev-docker.sh || true",
    "dev:test": "NODE_ENV=dev jest --watch --config='jest.config.js'",
    "binary:alpine:x64": "npm run build && pkg dist/app.js --target node16-alpine-x64 --output ./dist/telepathy-server-linux-alpine",
    "binary:linux:x64": "npm run build && pkg dist/app.js --target node16-linux-x64 --output ./dist/telepathy-server-linux-x64",
    "binary:linux:armv6": "npm run build && pkg dist/app.js --target node14-linux-armv6 --output ./dist/telepathy-server-linux-armv6",
    "binary:linux:arm64": "npm run build && pkg dist/app.js --target arm64 --output ./dist/telepathy-server-linux-armv7"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@opentelemetry/api": "^1.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.30.0",
    "@opentelemetry/instrumentation-http": "^0.30.0",
    "@opentelemetry/resources": "^1.4.0",
    "@opentelemetry/sdk-node": "^0.30.0",
    "@opentelemetry/semantic-conventions": "^1.4.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "fastify": "^4.2.0",
    "fs-extra": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "md5-file": "^4.0.0",
    "node-cron": "^2.0.0",
    "pino-pretty": "^8.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
